<%- include ('partials/header.ejs');%>
<body>
    <%- include ('partials/navbar.ejs');%>
    <br>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h1>Perguntas</h1>
            </div>
            <div class="card-footer">
                <a href="/perguntar" class="btn btn-success">Perguntar</a>
            </div>
        </div>
        <% perguntas.forEach(pergunta =>{ %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                    <p><%= pergunta.descricao%></p>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success">Responder</button>
                </div>
            </div>
         <% })%>
    </div>
    
</body>
<%- include('partials/footer.ejs');%>